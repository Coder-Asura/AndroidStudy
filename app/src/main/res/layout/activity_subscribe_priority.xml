<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <Button
        android:id="@+id/btn_publish_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送事件"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_msg_priority_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="priority1"
        app:layout_constraintTop_toBottomOf="@id/btn_publish_priority"/>

    <TextView
        android:id="@+id/tv_msg_priority_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="priority2"
        app:layout_constraintTop_toBottomOf="@id/tv_msg_priority_1"/>

    <TextView
        android:id="@+id/tv_msg_priority_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="priority3"
        app:layout_constraintTop_toBottomOf="@id/tv_msg_priority_2"/>

    <TextView
        android:id="@+id/tv_msg_priority_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="priority4"
        app:layout_constraintTop_toBottomOf="@id/tv_msg_priority_3"/>

    <TextView
        android:id="@+id/tv_msg_priority_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="priority5"
        app:layout_constraintTop_toBottomOf="@id/tv_msg_priority_4"/>
</android.support.constraint.ConstraintLayout>